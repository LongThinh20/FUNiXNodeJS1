<div class="tab-pane container fade" id="offTime">
    <br>
    <% if(staffInfo.annualLeave> 0 ) { %>

        <form method="post" action="/time-off">
            <div class="form-group">
                <label for="offTime">Chọn ngày nghỉ phép: </label>
                <input type="text" class="form-control dateeee " placeholder="Chọn nhiều ngày ... " name="offTime">
            </div>
            <div class="form-group">
                <label for="reason">Lý do nghỉ nghỉ phép:</label>
                <textarea name="reason" id="reason" rows="2" cols="30"></textarea>
            </div>
            <div class="form-group">
                <label for="annualLeave">Số ngày nghỉ còn lại: </label>
                <input type="number" class="form-control" id="annualLeave" value="<%= staffInfo.annualLeave %>"
                    name="annualLeave" disabled>
            </div>
            <div class="form-group">
                <label for="offHours">Chọn số giờ nghỉ: </label>
                <input type="number" class="form-control" placeholder="Chọn tối đa 8 giờ . (4h --> 0.5 ngày)"
                    id="offHours" name="offHours" min="1" max="8" step="1">
            </div>

            <button type="submit" class="btn btn-primary">Gửi</button>
        </form>
        <% }else{ %>
            <h1> Hết ngày nghỉ phép !!</h1>
            <% } %>




</div>