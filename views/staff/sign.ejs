<div class="tab-pane container active" id="home">
    <form method="post" action="/">
        <br>
        <input type="text" value="<%= staffInfo.name %> " class="btn btn-outline-primary" disabled>
        <p>Chọn nơi làm việc :</p>
        <div class="form-check">
            <label class="form-check-label">
                <input type="radio" class="form-check-input" name="workSpace" value="company" checked="checked"><i
                    class="fa fa-building"></i> ( Công ty )
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input type="radio" class="form-check-input" name="workSpace" value="home"><i class="fa fa-home"></i> (
                Nhà )
            </label>
        </div>

        <div class="form-check">
            <label class="form-check-label">
                <input type="radio" class="form-check-input" name="workSpace" value="customer"><i
                    class="fa fa-users"></i> ( Khách hàng )
            </label>
        </div>
        <!-- <a href="/attendance?status=true">BẮT ĐẦU LÀM VIỆC</a> -->
        <button class="btn btn-primary" type="submit">BẮT ĐẦU LÀM</button>
        <input type="hidden" name="staffId" value="<%= staffInfo._id %> ">
    </form>
    <br>

    <p> Số giờ làm : <%= totalDay %> ( giờ )
    </p>
    <% if(workTimes.length> 0){ %>

        <% for(let time of workTimes) {%>
            <div class="card text-left">
                <div class="card-body">
                    <p class="card-text">
                        <% if(time.workSpace==='company' ){ %>
                            Công ty
                            <% } else if(time.workSpace==='home' ){ %>
                                Nhà
                                <% }else{ %>
                                    Khách hàng
                                    <% } %>
                    </p>
                    <p class="card-text">
                        <%= moment(time.startTime).format('DD/MM/YYYY, h:mm:ss a') %>
                    </p>
                    <p class="card-text">
                        <%= moment(time.endTime).format('DD/MM/YYYY, h:mm:ss a') %>
                    </p>
                </div>
            </div>

            <% } %>
                <% } %>

</div>