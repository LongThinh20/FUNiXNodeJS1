<%- include('../includes/head.ejs') %>
    <%- include('../includes/navigation.ejs') %>
        <main class="container">
            <form action="/staffInfo" method="post">
                <h2>THÔNG TIN CÁ NHÂN </h2>
                <br>
                <div class="row ">
                    <div class="col-sm-12 col-md-4">
                        <img src="<%= staffInfo.image %> ">
                        <input type="text" class="form-control" name="image" placeholder="Điền đường dẫn ảnh ..."
                            required>
                        <br>
                        <button class="btn btn_info w-100" type="submit">Cập nhật ảnh</button>
                    </div>
                    <div className="col-sm-12 col-md-8 p-2 ">
                        <div class="row text-left pl-2  staffInfo">
                            <div class="col">
                                <p class="font-weight-bold">ID :</p>
                                <p class="font-weight-bold">Họ và Tên :</p>
                                <p class="font-weight-bold">Ngày sinh : </p>
                                <p class="font-weight-bold">Hệ số lương :</p>
                                <p class="font-weight-bold">Ngày vào công ty :</p>
                                <p class="font-weight-bold">Phòng ban :</p>
                                <p class="font-weight-bold">Số ngày nghỉ còn lại: </p>
                            </div>
                            <div class="col  ">
                                <p class="font-italic text-secondary font-weight-normal ">
                                    <%= staffInfo._id.toString() %>
                                </p>
                                <p class="font-italic text-secondary font-weight-normal ">
                                    <%= staffInfo.name %>
                                </p>
                                <p class="font-italic text-secondary font-weight-normal ">
                                    <%= staffInfo.doB.getDate() %>
                                        - <%= staffInfo.doB.getMonth() %>
                                            - <%= staffInfo.doB.getFullYear() %>
                                </p>
                                <p class="font-italic text-secondary font-weight-normal ">
                                    <%= staffInfo.salaryScale %>
                                </p>
                                <p class="font-italic text-secondary font-weight-normal ">
                                    <%= staffInfo.startDate.getDate() %>
                                        - <%= staffInfo.startDate.getMonth() %>
                                            - <%= staffInfo.startDate.getFullYear() %>
                                </p>
                                <p class="font-italic text-secondary font-weight-normal ">
                                    <%= staffInfo.department %>
                                </p>
                                <p class="font-italic text-secondary font-weight-normal ">
                                    <%= staffInfo.annualLeave %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </main>
        <%- include('../includes/end.ejs') %>