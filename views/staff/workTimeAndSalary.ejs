<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main class="container">

                <h1>THÔNG TIN GIỜ LÀM && LƯƠNG </h1>

                <!-- Nav pills -->
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="pill" href="#home">DANH SÁCH GIỜ LÀM </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#menu1">LƯƠNG THEO THÁNG</a>
                    </li>

                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane container active" id="home">
                        <% if(workTimes.length> 0){ %>

                            <% for(let time of workTimes) {%>
                                <div class="card text-left">
                                    <div class="card-body">
                                        <p class="card-text">
                                            Ngày : <%= moment(time.endTime).format('DD/MM/YYYY') %>
                                        </p>
                                        <p class="card-text">
                                            Thời gian bắt đầu : <%= moment(time.startTime).format(' h:mm:ss a') %>
                                        </p>
                                        <p class="card-text">
                                            Thời gian kết thúc : <%= moment(time.endTime).format(' h:mm:ss a') %>
                                        </p>
                                        <p class="card-text">
                                            Nơi làm việc : <% if(time.workSpace==='company' ){ %>
                                                Công ty
                                                <% } else if(time.workSpace==='home' ){ %>
                                                    Nhà
                                                    <% }else{ %>
                                                        Khách hàng
                                                        <% } %>
                                        </p>
                                        <p class="card-text">
                                            Thời gian làm việc : <%= time.total %>
                                        </p>
                                        <p class="card-text">
                                            Số giờ tính thêm : <%= time.overTime %>
                                        </p>
                                    </div>
                                </div>

                                <% } %>
                                    <% } %>
                    </div>
                    <div class="tab-pane container fade" id="menu1">...</div>

                </div>
            </main>
            <%- include('../includes/end.ejs') %>